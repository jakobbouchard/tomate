{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../dist"
	},
	"package": {
		"productName": "Tomate",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"notification": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"category": "Productivity",
			"copyright": "Copyright Â© 2022 Jakob Bouchard",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "dev.jakobbouchard.tomate",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "A simple Pomodoro timer.",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"systemTray": {
			"iconPath": "icons/icon.png",
			"iconAsTemplate": true
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 768,
				"resizable": true,
				"title": "Tomate",
				"width": 1024
			}
		]
	}
}
